[Script]
# 自动定位
http-request https:\/\/((weather-data\.apple)|(api.weather))\.com script-path=https://raw.githubusercontent.com/Peng-YM/QuanX/master/Tasks/caiyun.js, requires-body=true, timeout=10, tag=自动定位, img-url=https://raw.githubusercontent.com/chxm1023/Task/main/icon/caiyun.png
# 彩云天气
cron "10 10,17 * * ?" script-path=https://raw.githubusercontent.com/Peng-YM/QuanX/master/Tasks/caiyun.js, timeout=10, tag=彩云天气, img-url=https://raw.githubusercontent.com/chxm1023/Task/main/icon/caiyun.png

[MITM]
hostname=weather-data.apple.com, api.weather.com
